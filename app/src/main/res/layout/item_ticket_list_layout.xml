<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/itll_iv_image"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_indexpic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itll_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="南京市文化消费政府补贴剧目:世界经典原版音乐剧猫"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="18sp" 
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/itll_tv_duration"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018.03.01-2018.05.01 | 江苏大剧院歌剧厅"
                android:textColor="#A7A5A5"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/itll_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#D30035"
                android:text="50-200 元"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#A7A5A5"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/itll_tv_biref"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2003年，2008年两度来华一票难求！ 万人空巷！阔别十年 再度来袭"
                android:textColor="#A7A5A5"
                android:textSize="11sp"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>